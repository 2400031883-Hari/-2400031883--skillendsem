<meta charset="UTF-8">
<title>Student Birthday Reminder</title>

<style>
    body {
        font-family: Arial, sans-serif;
        padding: 20px;
    }

    /* Toast style */
    #toast {
        visibility: hidden;
        min-width: 300px;
        margin-left: -150px;
        background-color: #333;
        color: #fff;
        text-align: center;
        border-radius: 8px;
        padding: 14px;
        position: fixed;
        z-index: 1;
        left: 50%;
        bottom: 30px;
        font-size: 18px;
    }

    #toast.show {
        visibility: visible;
        animation: fadein 0.5s, fadeout 0.5s 3s;
    }

    @keyframes fadein {
        from {bottom: 0; opacity: 0;} 
        to {bottom: 30px; opacity: 1;}
    }

    @keyframes fadeout {
        from {bottom: 30px; opacity: 1;} 
        to {bottom: 0; opacity: 0;}
    }
</style>
