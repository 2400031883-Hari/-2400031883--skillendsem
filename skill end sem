<body>

<h2>ðŸŽ‚ Student Birthday Reminder</h2>

<!-- Toast Notification -->
<div id="toast"></div>

<script>
// Student birthday list
const students = [
    { name: "Rohit", dob: "2005-11-28" },
    { name: "Sneha", dob: "2006-12-05" },
    { name: "Amit", dob: "2005-11-28" },
    { name: "Priya", dob: "2007-01-10" }
];

// Function to show toast
function showToast(message) {
    const toast = document.getElementById("toast");
    toast.innerHTML = message;
    toast.className = "show";
    setTimeout(() => { toast.className = toast.className.replace("show", ""); }, 3500);
}

// Check for birthdays
function checkBirthdays() {
    const today = new Date();
    const tMonth = today.getMonth() + 1;
    const tDate = today.getDate();

    let birthdayList = [];

    students.forEach(student => {
        const bday = new Date(student.dob);
        if ((bday.getMonth() + 1) === tMonth && bday.getDate() === tDate) {
            birthdayList.push(student.name);
        }
    });

    if (birthdayList.length > 0) {
        showToast("ðŸŽ‰ Today's Birthdays: " + birthdayList.join(", "));
    } else {
        showToast("No birthdays today.");
    }
}

// Run function on page load
window.onload = checkBirthdays;
</script>

</body>
</html>
